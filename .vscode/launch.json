    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/d/repos/cpp-patterns/bin/test_avl",
            "args": [],
            "stopAtEntry": false,
            "cwd": "/mnt/d/repos/cpp-patterns",
            "environment": [],
            "externalConsole": true,

            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "pipeTransport": {
                "debuggerPath": "/usr/bin/gdb",    
                "pipeProgram": "C:\\Windows\\sysnative\\bash.exe",    
                "pipeArgs": ["-c"],    
                "pipeCwd": ""    
            },

            "sourceFileMap": {
                "/mnt/c": "c:\\",
                "/mnt/d": "d:\\"
            }
        }
    ]
}